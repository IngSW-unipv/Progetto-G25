<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unipv.ingsfw.bitebyte.controller.StoricoController" spacing="10" alignment="CENTER">
    <Label text="Storico Ordini" style="-fx-font-size: 16px;"/>
    
    <!-- La VBox con il contenuto dinamico, inizialmente vuota -->
    <VBox fx:id="contenitoreOrdini" spacing="10" alignment="CENTER"/>
    
    <!-- Il bottone per tornare indietro -->
    <Button text="Torna indietro" onAction="#handleBackButton" style="-fx-background-color: #FF6347; -fx-text-fill: white; -fx-font-size: 16px;"/>
</VBox>
